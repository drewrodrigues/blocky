{
  "name": "blockly",
  "version": "0.0.1",
  "description": "",
  "dependencies": {
    "@types/chrome": "0.0.185"
  },
  "devDependencies": {
    "concurrently": "^7.2.0",
    "copy-webpack-plugin": "^11.0.0",
    "file-loader": "^6.2.0",
    "live-server": "^1.2.2",
    "prettier": "^2.6.2",
    "tailwindcss": "^3.0.24",
    "ts-loader": "^9.3.0",
    "typescript": "^4.6.4",
    "webpack": "^5.72.1",
    "webpack-cli": "^4.9.2"
  },
  "scripts": {
    "_": "Run Scripts",
    "plugin:build:watch": "webpack build --watch",
    "website:start": "concurrently 'npm run _website:server' 'npm run _website:styles:watch'",
    "__": "Build Scripts",
    "website:build": "npm run _website:styles:build",
    "plugin:build": "ENV=dev webpack build",
    "plugin:build:prod": "ENV=prod webpack build",
    "___": "Runtime Scripts",
    "_website:styles:build": "npx tailwindcss -i ./src/website/index.css -o ./src/website/index_after.css",
    "_website:styles:watch": "npx tailwindcss -i ./src/website/index.css -o ./src/website/index_after.css --watch",
    "_website:server": "live-server --no-css-inject --watch=src/website --open=src/website --entry-file=src/website/index.html",
    "____": "Packaging Scripts",
    "prepack": "rm Blocky.zip",
    "pack": "npm run plugin:build:prod && zip -r Blocky.zip dist"
  },
  "private": true,
  "author": "Drew Rodrigues"
}
