{
  "name": "Blocky",
  "version": "0.2.1",
  "manifest_version": 3,
  "description": "Easily create time blocks in Google Calendar.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": ["https://calendar.google.com/*"],
  "content_scripts": [
    {
      "matches": ["https://calendar.google.com/calendar*"],
      "js": ["bundle.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["*.png"],
      "matches": ["https://calendar.google.com/*"]
    }
  ]
}
